{
  "manifest_version": 2,
  "name": "BNB Browser",
  "description": "Online wallet for Binance Chain",
  "version": "0.0.4",
  "icons": {
    "16": "assets/icons/BNB 16.png",
    "48": "assets/icons/BNB 48.png",
    "128": "assets/icons/BNB 128.png"
  },
  "browser_action": {
    "default_icon": "assets/icons/BNB 128.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "https://www.binance.org/*/*",
        "http://localhost:4200/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
